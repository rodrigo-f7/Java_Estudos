package vetores.ex_simples;

public class ExemploVetSimples {

	public static void main(String[] args) {
		// TODO Auto-generated method stub
		double[] numeros = new double[] {2.0, 4.0, 7.0, 14.0};
		
		System.out.println(numeros);
		
		//int somaPrimeiroComUltimo = numeros[1] + numeros[4]; Erro pois índice 4 não, vai de 0 a 3
		int somaPrimeiroComUltimo = (int) (numeros[0] + numeros[3]);
		System.out.println("A soma do primeiro com o último foi: "+ somaPrimeiroComUltimo);
		
		int subNumsDoMeio = (int) (numeros[1] - numeros[2]);
		System.out.println("A subtração dos números do meio foi: ");
		
		
	}

}
